{
  "preset": "ts-jest/presets/js-with-ts",
  "testEnvironment": "node",
  "rootDir": ".",
  "testMatch": ["<rootDir>/test/**/*.spec.ts"],
  "moduleNameMapper": {
    "^~/(.*)": "<rootDir>/src/$1"
  },
  "transformIgnorePatterns": [
    "/node_modules/(?!(vuex-class-modules)/)/"
  ],
  "globals": {
    "ts-jest": {
      "tsConfig": {
        "esModuleInterop": true,
        "allowJs": true
      }
    }
  }
}