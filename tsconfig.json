{
    "compilerOptions": {

        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ],

        // Suppress warnings for using decorators
        "experimentalDecorators": true,
        "importHelpers": true,

        // Restrict syntax
        "noImplicitAny": true,
        "strict": true,
        
        // Define module paths
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./src/*"
            ]
        },

        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],

        "plugins": [
            {
                "name": "typescript-tslint-plugin",
                "alwaysShowRuleFailuresAsWarnings": false
            }
        ]
    },

    "exclude": [
        "dist",
        "node_modules",
        "**/node_modules/*"
    ]
}